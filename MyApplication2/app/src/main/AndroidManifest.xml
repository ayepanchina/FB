<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.app" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppThemeBudget">
        <activity
            android:name="com.example.app.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.app.AddEditCategory"
            android:label="@string/app_name"
            android:parentActivityName="com.example.app.MainActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".AllCategoriesActivity"
            android:label="@string/app_name"
            android:parentActivityName="com.example.app.MainActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.app.AddEditItem"
            android:label="@string/app_name"
            android:parentActivityName="com.example.app.MainActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.app.PlanExpense"
            android:label="@string/app_name"
            android:parentActivityName="com.example.app.MainActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.app.SetPlanExpense"
            android:label="@string/title_activity_set_plan_expense"
            android:parentActivityName="com.example.app.MainActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.app.PlanSuccessfull"
            android:label="@string/title_activity_plan_successfull"
            android:parentActivityName="com.example.app.MainActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.app.PlanFailed"
            android:label="@string/title_activity_plan_failed"
            android:parentActivityName="com.example.app.MainActivity"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>
